{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [
            "error", 4, { "ignoredNodes": ["ConditionalExpression"] }
        ],
        "import/prefer-default-export": "off",
        "import/extensions": [
            "error",
            {
                "ignorePackages": true
            }
        ],
        "import/no-unresolved": "off",
        "consistent-return": "off"
    },
    "overrides": [
        {
         "files": ["*test.ts"],
            "rules": {
               "no-undef": "off"   
            }
        }
    ]
}
